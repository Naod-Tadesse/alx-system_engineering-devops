#!/usr/bin/env bash
# this script configures redirectin

index_page() {
	echo 'Hello World' > /var/www/html/index.html
}

redirect_page() {
	cat << EOF > /etc/nginx/sites-enabled/default
	echo "server {
		listen 80;
		server_name _;
		root /var/www/html;
		index index.html;

		location /redirect_me {
			return 301 http://www.youtube.com/;

		}

		location / {
			echo 'Hello World!';
		}
	}
EOF
}

apt-get update
apt-get install -y nginx
redirectt_page
sudo service nginx restart
