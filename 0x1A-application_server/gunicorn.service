[Unit]
Description=Gunicorn instance to serve Airbnb application
After=network.target

[Service]
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/AirBnB_clone_v3
ExecStart=/usr/bin/gunicorn --workers 3 --bind 0.0.0.0:5003 api.v1.app:app --access-logfile /tmp/airbnb-access.log --error-logfile /tmp/airbnb-error.log
Restart=always

[Install]
WantedBy=multi-user.target

